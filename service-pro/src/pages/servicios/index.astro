---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SITE } from "@/config/site";
import SeoJsonLd from "@/components/SeoJsonLd.astro";
import ServiceGrid from "@/components/ServiceGrid.astro";
---

<BaseLayout
  title={`Servicios | ${SITE.name}`}
  description={`Elegí el servicio y reservá visita por WhatsApp. Atención en ${SITE.coverage}.`}
  pathname="/servicios"
>
  <SeoJsonLd />

  <section class="section">
    <div class="container">
      <h1 class="h1">Servicios</h1>
      <p class="p">Elegí el servicio y te llevamos al formulario correspondiente.</p>

      <div class="panelWrap" style="margin-top:18px;">
        <div class="panel panel--modern" data-reveal>
          <h2 class="panel__title">¿Cómo podemos ayudarte?</h2>
          <ServiceGrid />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
