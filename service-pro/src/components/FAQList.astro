---
import type { FaqItem } from "@/data/faqs";
const { items } = Astro.props as { items: FaqItem[] };
---
<div class="faqList" data-reveal>
  {items.map((f, idx) => (
    <details class="faqItem" open={idx === 0}>
      <summary class="faqSummary">
        <span class="faqQ">{f.q}</span>
        <span class="faqChevron" aria-hidden="true">âŒ„</span>
      </summary>

      <div class="faqA">
        <p>{f.a}</p>
      </div>
    </details>
  ))}
</div>
